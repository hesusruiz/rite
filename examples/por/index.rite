                        "token_type": "bearer",
                        "expires_in": 86400,
                        "c_nonce": "tZignsnFbp",
                        "c_nonce_expires_in": 86400,
                        "authorization_details": [
                            {
                                "type": "openid_credential",
                                "credential_configuration_id": "UniversityDegreeCredential"
